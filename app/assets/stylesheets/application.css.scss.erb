html {
  background: url(<%= asset_path 'background.jpg' %>) no-repeat center center fixed; 
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
}

body {
  background: transparent;
}

div.container{
  position: absolute;
  top: 0px;
  left: 142px;
}

div.transparent {
  width: 390px;
  background: #c3c3c3;
  opacity: .20; /* Standard: FF gt 1.2, Opera, Safari, CSS3 */
  filter: alpha(opacity=20); /* IE lt 8 */
  -ms-filter: "alpha(opacity=20)"; /* IE 8 */
  -khtml-opacity: .20; /* Safari 1.x */
  -moz-opacity: .20;
  display: block;
  margin-left: 115px;
  text-indent: -999em;
}

div.gallery {
  float: left;
  margin-right: 15px;
  margin-bottom: 15px;
}

h3 {
  color: #D01217;
}

form label {
  color: white;
}

form.nice div.form-field input, form.nice input.input-text, form.nice textarea {
  width: 295px;
}

span.tel {
  color: white;
  position: absolute;
}

.nice.red.button {
  float: right;
}