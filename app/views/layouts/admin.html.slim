doctype 5
html
  head
    title Titeres -Admin
    = stylesheet_link_tag "admin"
    = csrf_meta_tags

  body
    header
      div.container
        div.row
          div.three.columns
            h2= link_to "Titeres", admin_root_path
          div.nine.columns
            nav
              = current_admin.email
              span.red.round.label
                = link_to "Logout", destroy_admin_session_path

    section
      div.row
        ul.breadcrumbs
          li class="#{available('galleries')}"
            = link_to "Galleries", admin_galleries_path
          li class="#{available('videos')}"
            = link_to "Videos", admin_videos_path

      div.row
        div.six.columns
          = yield
        div.six.columns
          = yield :right_side

  = javascript_include_tag "admin"
